[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE
[log]
	date = format:%D %I:%M %p
[pretty]
	useful = %<(7 trunc)%Cblue%h %<|(80 trunc)%C(3)%s %>|(-29 ltruct)%Cgreen%an %>|(-9 ltrunc)%Creset%ad
[format]
	pretty = useful
[status]
	short = true
